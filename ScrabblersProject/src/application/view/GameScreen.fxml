   <children>
      <AnchorPane fx:id="WordHelperPane" layoutX="786.0" layoutY="407.0" prefHeight="400.0" prefWidth="400.0">
         <children>
            <Label fx:id="WFLabel" layoutX="113.0" layoutY="42.0" text="Words Found">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <ListView fx:id="WordDisplayLV" layoutX="124.0" layoutY="91.0" prefHeight="200.0" prefWidth="200.0" />
